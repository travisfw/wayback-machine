       <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/archive-access:archive-access</connection>
        <url>http://cvs.sourceforge.net/viewcvs.py/archive-access/</url>
    </repository>

    <versions />

