<plugin
   id="index-nutchwax"
   name="NutchWax Indexing Filter"
   version="1.0.0"
   provider-name="archive.org">

   <runtime>
      <library name="index-nutchwax.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="nutch-extensionpoints"/>
   </requires>

   <extension id="org.apache.nutch.indexer.basic"
              name="NutchWax Indexing Filter"
              point="org.apache.nutch.indexer.IndexingFilter">
      <implementation id="NutchWaxIndexingFilter"
                      class="org.archive.nutchwax.index.ConfigurableIndexingFilter" />
   </extension>

</plugin>
